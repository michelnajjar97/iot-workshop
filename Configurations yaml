# Relay Switch code Starting 

input_boolean:
  blind_state:
    name: "Blind State"
    initial: off
    icon: mdi:blinds


switch:
  - platform: template
    switches:
      blind:
        friendly_name: "Blind"
        value_template: "{{ is_state('input_boolean.blind_state', 'on') }}"
        turn_on:
          service: input_boolean.turn_on
          entity_id: input_boolean.blind_state
        turn_off:
          service: input_boolean.turn_off
          entity_id: input_boolean.blind_state
   
# Relay Switch Ending


